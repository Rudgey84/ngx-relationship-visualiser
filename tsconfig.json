{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2018", "dom"],
    "paths": {
      "ngx-relationship-visualiser": ["dist/ngx-relationship-visualiser"],
      "ngx-relationship-visualiser/*": ["dist/ngx-relationship-visualiser/*"]
    },
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}